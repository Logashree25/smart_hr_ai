<mvc:View
    controllerName="smart.hr.portal.controller.Analytics"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns="sap.m">

    <Page id="analyticsPage" title="{i18n>analyticsTitle}" showNavButton="false">
        
        <content>
            <ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
                
                <!-- Analytics Header -->
                <VBox class="sapUiMediumMargin">
                    <Title text="{i18n>analyticsTitle}" level="H2" class="sapUiMediumMarginBottom"/>
                    
                    <!-- Filter Bar -->
                    <HBox class="sapUiMediumMarginBottom" wrap="Wrap">
                        <ComboBox id="departmentFilter" 
                                  placeholder="{i18n>selectDepartment}"
                                  items="{/Departments}"
                                  selectedKey="{analytics>/selectedDepartment}"
                                  selectionChange="onDepartmentFilterChange"
                                  class="sapUiTinyMarginEnd">
                            <core:Item key="{Department}" text="{Department}"/>
                        </ComboBox>
                        
                        <DateRangeSelection id="dateRangeFilter"
                                           placeholder="{i18n>selectDateRange}"
                                           value="{analytics>/dateRange}"
                                           change="onDateRangeChange"
                                           class="sapUiTinyMarginEnd"/>
                        
                        <Button text="{i18n>applyFilters}" 
                                press="onApplyFilters"
                                type="Emphasized"/>
                        <Button text="{i18n>resetFilters}" 
                                press="onResetFilters"
                                type="Default"
                                class="sapUiTinyMarginStart"/>
                    </HBox>
                </VBox>
                
                <!-- Analytics Content -->
                <VBox class="sapUiMediumMargin">
                    
                    <!-- Department Overview -->
                    <f:Card class="sapUiMediumMarginBottom">
                        <f:header>
                            <card:Header title="{i18n>departmentOverview}" iconSrc="sap-icon://org-chart"/>
                        </f:header>
                        <f:content>
                            <Table id="departmentTable"
                                   items="{analytics>/departmentStats}"
                                   class="sapUiResponsiveMargin">
                                <columns>
                                    <Column>
                                        <Text text="{i18n>department}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>employeeCount}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>avgSatisfaction}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>avgPerformance}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>attritionRisk}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{analytics>department}"/>
                                            <Text text="{analytics>employeeCount}"/>
                                            <Text text="{analytics>avgSatisfaction}"/>
                                            <Text text="{analytics>avgPerformance}"/>
                                            <ObjectStatus text="{analytics>riskLevel}" 
                                                         state="{analytics>riskState}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </f:content>
                    </f:Card>
                    
                    <!-- Charts Section -->
                    <HBox class="sapUiNoMargin" wrap="Wrap">
                        
                        <!-- Satisfaction Trends Chart -->
                        <VBox class="sapUiMediumMarginEnd" width="48%">
                            <f:Card class="sapUiMediumMarginBottom">
                                <f:header>
                                    <card:Header title="{i18n>satisfactionTrends}" iconSrc="sap-icon://line-chart"/>
                                </f:header>
                                <f:content>
                                    <VBox class="sapUiMediumMargin">
                                        <!-- Placeholder for chart - would integrate with UI5 charting library -->
                                        <Text text="{i18n>chartPlaceholder}" class="text-center"/>
                                        <Button text="{i18n>viewDetailedChart}" 
                                                press="onViewSatisfactionChart"
                                                type="Default"
                                                class="sapUiTinyMarginTop"/>
                                    </VBox>
                                </f:content>
                            </f:Card>
                        </VBox>
                        
                        <!-- Performance Trends Chart -->
                        <VBox class="sapUiMediumMarginStart" width="48%">
                            <f:Card class="sapUiMediumMarginBottom">
                                <f:header>
                                    <card:Header title="{i18n>performanceTrends}" iconSrc="sap-icon://bar-chart"/>
                                </f:header>
                                <f:content>
                                    <VBox class="sapUiMediumMargin">
                                        <!-- Placeholder for chart - would integrate with UI5 charting library -->
                                        <Text text="{i18n>chartPlaceholder}" class="text-center"/>
                                        <Button text="{i18n>viewDetailedChart}" 
                                                press="onViewPerformanceChart"
                                                type="Default"
                                                class="sapUiTinyMarginTop"/>
                                    </VBox>
                                </f:content>
                            </f:Card>
                        </VBox>
                        
                    </HBox>
                    
                    <!-- AI-Powered Insights -->
                    <f:Card class="sapUiMediumMarginBottom">
                        <f:header>
                            <card:Header title="{i18n>aiPoweredInsights}" iconSrc="sap-icon://artificial-intelligence"/>
                        </f:header>
                        <f:content>
                            <VBox class="sapUiMediumMargin">
                                
                                <!-- Insight Generation Actions -->
                                <HBox class="sapUiMediumMarginBottom" wrap="Wrap">
                                    <Button text="{i18n>generateDepartmentInsights}" 
                                            press="onGenerateDepartmentInsights"
                                            type="Emphasized"
                                            class="sapUiTinyMarginEnd"/>
                                    <Button text="{i18n>analyzeTrends}" 
                                            press="onAnalyzeTrends"
                                            type="Default"
                                            class="sapUiTinyMarginEnd"/>
                                    <Button text="{i18n>predictAttrition}" 
                                            press="onPredictAttrition"
                                            type="Default"/>
                                </HBox>
                                
                                <!-- Generated Insights List -->
                                <List id="analyticsInsightsList"
                                      items="{analytics>/insights}"
                                      noDataText="{i18n>noInsightsGenerated}">
                                    <StandardListItem title="{analytics>title}"
                                                     description="{analytics>description}"
                                                     info="{analytics>confidence}"
                                                     type="Active"
                                                     press="onInsightPress"/>
                                </List>
                                
                            </VBox>
                        </f:content>
                    </f:Card>
                    
                    <!-- Attrition Analysis -->
                    <f:Card>
                        <f:header>
                            <card:Header title="{i18n>attritionAnalysis}" iconSrc="sap-icon://warning"/>
                        </f:header>
                        <f:content>
                            <Table id="attritionTable"
                                   items="{path: '/AttritionRisk', parameters: {$expand: 'EmployeeID'}}"
                                   class="sapUiResponsiveMargin">
                                <columns>
                                    <Column>
                                        <Text text="{i18n>employeeName}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>department}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>riskScore}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>urgencyLevel}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>lastUpdated}"/>
                                    </Column>
                                    <Column>
                                        <Text text="{i18n>actions}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{EmployeeID/FirstName} {EmployeeID/LastName}"/>
                                            <Text text="{EmployeeID/Department}"/>
                                            <Text text="{RiskScore}"/>
                                            <ObjectStatus text="{UrgencyLevel}" 
                                                         state="{path: 'UrgencyLevel', formatter: '.formatUrgencyState'}"/>
                                            <Text text="{path: 'LastUpdated', type: 'sap.ui.model.odata.type.DateTimeOffset'}"/>
                                            <Button icon="sap-icon://detail-view" 
                                                    tooltip="{i18n>viewDetails}" 
                                                    press="onViewEmployeeFromAttrition"
                                                    type="Transparent"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </f:content>
                    </f:Card>
                    
                </VBox>
                
            </ScrollContainer>
        </content>
        
        <!-- Analytics Actions Footer -->
        <footer>
            <Toolbar>
                <Button text="{i18n>exportData}" 
                        press="onExportData"
                        type="Default"/>
                <ToolbarSpacer/>
                <Button text="{i18n>refreshAnalytics}" 
                        press="onRefreshAnalytics"
                        type="Emphasized"/>
            </Toolbar>
        </footer>
        
    </Page>
</mvc:View>
